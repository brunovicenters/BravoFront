<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (white background and border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Spinner background color -->
            <stroke android:width="2dp" android:color="@color/negative" /> <!-- Border -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Dropdown arrow (custom arrow) -->
    <item android:right="8dp" android:gravity="end|center_vertical">
        <inset android:drawable="@drawable/custom_arrow" />
    </item>
</layer-list>
