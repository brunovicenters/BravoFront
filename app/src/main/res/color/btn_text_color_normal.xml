<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!--When the button is not enabled-->
        <item android:state_enabled="false" android:color="@color/negative" />
        <!--When button is enabled-->
        <item android:state_selected="true" android:color="@color/white_100" />
        <!--When button is pressed-->
        <item android:state_pressed="true" android:color="@color/white_100" />
        <!--Default Text Color-->
        <item android:color="@color/secondary" />

</selector>