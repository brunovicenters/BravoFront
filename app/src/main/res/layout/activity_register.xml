<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.LoginActivity"
        android:background="@color/white_100">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".views.LoginActivity"
                android:background="@color/white_100">

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/backicon"
                    android:id="@+id/backBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/back_icon"/>

            <ImageView
                    android:src="@drawable/logo_min"
                    android:layout_width="64dp"
                    android:layout_height="72dp"
                    android:id="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/logo_desc"/>

            <TextView
                    android:text="Nome:*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/negative"
                    android:fontFamily="@font/federant"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.223"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    app:boxBackgroundColor="@color/disabled"
                    android:id="@+id/textInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome"
                        android:fontFamily="@font/fugaz_one"
                        android:textColor="@color/main"
                        android:id="@+id/inputNome"
                        android:inputType="text|textPersonName|textAutoComplete|textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="CPF:*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/negative"
                    android:fontFamily="@font/federant"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.223"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    app:boxBackgroundColor="@color/disabled"
                    android:id="@+id/textInputLayout1"
                    app:endIconMode="none">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CPF"
                        android:fontFamily="@font/fugaz_one"
                        android:textColor="@color/main"
                        android:id="@+id/inputCPF"
                        android:inputType="number"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="@string/email_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/negative"
                    android:fontFamily="@font/federant"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.223"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    app:boxBackgroundColor="@color/disabled"
                    android:id="@+id/textInputLayout2">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/e_mail"
                        android:fontFamily="@font/fugaz_one"
                        android:textColor="@color/main"
                        android:id="@+id/inputEmail"
                        android:inputType="text|textEmailAddress|textAutoComplete"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="@string/password_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/negative"
                    android:fontFamily="@font/federant"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.223"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    app:boxBackgroundColor="@color/disabled"
                    android:id="@+id/textInputLayout3"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:fontFamily="@font/fugaz_one"
                        android:textColor="@color/main"
                        android:id="@+id/inputPassword"
                        android:inputType="text|textPassword|textNoSuggestions"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Confirmar Senha:*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/negative"
                    android:fontFamily="@font/federant"
                    android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.223"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout3"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    app:boxBackgroundColor="@color/disabled"
                    android:id="@+id/textInputLayout5"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:fontFamily="@font/fugaz_one"
                        android:textColor="@color/main"
                        android:id="@+id/inputPasswordConfirmation"
                        android:inputType="text|textPassword|textNoSuggestions"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Já possui conta?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/fugaz_one"
                    android:textColor="@color/secondary"
                    android:textSize="12sp"/>

            <TextView
                    android:text="Entre na sua conta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCreateAccount"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fugaz_one"
                    android:textColor="@color/main"
                    android:textSize="16sp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:text="@string/keep_logged_in"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/swtKeepLoggedIn"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/fugaz_one"
                    android:textColor="@color/secondary"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    />

            <TextView
                    android:text="Termos e Condições"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTermAndConditions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/swtKeepLoggedIn"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/fugaz_one"
                    android:textColor="@color/main"
                    android:textSize="14sp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/swtTermAndConditions"
                    app:layout_constraintStart_toEndOf="@+id/txtTermAndConditions"
                    app:layout_constraintTop_toBottomOf="@+id/swtKeepLoggedIn"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fugaz_one"
                    android:textColor="@color/secondary"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    />

            <Button
                    android:text="@string/login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEntrar"
                    app:layout_constraintTop_toBottomOf="@+id/swtTermAndConditions"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/white_100"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

